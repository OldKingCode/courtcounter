<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Team A Score"




                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/score_a_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light" />

            <Button
                android:id="@+id/adThree_a_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Three Button"
                android:onClick="addThreeButton"
                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/addTwo_a_Button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Two Button"
                android:onClick="addTwoButton"

                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/freeThrow_a_botton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Free Throw"
                android:onClick="addOneButton"

                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
<View
    android:layout_width="2dp"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                android:text="Team B Score"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/score_b_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:id="@+id/adThree_b_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Three Button"
                android:onClick="addThreeButtonB"

                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/addTwo_b_Button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Two Button"
                android:onClick="addTwoButtonB"

                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/freeThrow_b_botton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+Free Throw"
                android:onClick="addOneButtonB"

                android:paddingBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="reset"
        android:textAllCaps="true"
        android:onClick="resetButton"/>


</RelativeLayout>
